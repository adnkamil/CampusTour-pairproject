<%- include('partials/header') %>
<div class="container">
    <form action="/tours/addTour" method="post">
        <div class="form-group">
          <label for="exampleInputEmail1">Name Tour</label>
          <input class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" type="text" name="name_tour">
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Date</label>
          <input class="form-control" id="exampleInputPassword1" type="date" name="date">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Campus</label>       
            <select name="university">
                <option value="">Choose...</option>
                <% data.forEach(e => { %>
                    <option value="<%= e.id %>"><%= e.campus %></option>
                <% }) %>
            </select><br><br>
          </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
</div>
    <%- include('partials/footer') %>

      